<div class="modal fade" id="CreateTaskWorkModal" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Task Work</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createTaskWorkForm">
                    <div class="form-group">
                        <label for="createTaskDueDate">Due Date</label>
                        <input type="date" class="form-control" id="createTaskDueDate">
                    </div>
                    <div class="mb-3">
                        <label for="createTaskCategoryId">Task Category</label>
                        <select class="form-select" id="createTaskCategoryId"></select>
                    </div>
                    <div class="mb-3">
                        <label for="createTaskPriority">Task Priority</label>
                        <select class="form-control" id="createTaskPriority"></select>
                    </div>
                    <div class="mb-3">
                        <label for="createTaskStage">Task Stage</label>
                        <select class="form-control" id="createTaskStage"></select>
                    </div>
                    <div class="mb-3">
                        <label for="createTaskDescription">Description</label>
                        <textarea type="text" class="form-control" id="createTaskDescription"></textarea>
                    </div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>